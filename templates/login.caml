<h1>{{#loc}}Login{{/loc}}</h1>

<form method="POST">
    <div>
        <input name="name" />
        {{#errors.name}}{{errors.name}}{{/errors.name}}
    </div>
    <div>
        <input type="password" name="password" />
        {{#errors.password}}{{errors.password}}{{/errors.password}}
    </div>
    <div>
        <input type="submit" name="submit" value="{{#loc}}Login{{/loc}}" />
    </div>
</form>
